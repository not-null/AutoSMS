<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

        <LinearLayout
            android:id="@+id/responseItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#292f46"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground">

            <TextView
                android:id="@+id/incomingMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tiden"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#7884b4"
                android:fontFamily="@font/truenorg"
                android:letterSpacing="0.05"
                tools:text="tiden" />

            <TextView
                android:id="@+id/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneNr"
                android:gravity="center"
                android:text="3 records"
                android:textColor="#7884b4"
                android:textSize="20sp"
                android:letterSpacing="0.05"
                android:fontFamily="@font/truenoultlt"
                tools:text="3 records" />

        </LinearLayout>

</LinearLayout>

