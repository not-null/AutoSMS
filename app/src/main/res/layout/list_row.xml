<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:padding="20dp"
        card_view:cardUseCompatPadding="true"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground">

        <LinearLayout
            android:id="@+id/recordItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border_bg"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground">

            <TextView
                android:id="@+id/phoneNr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="tiden"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#7884b4"
                android:fontFamily="@font/truenorg"
                android:letterSpacing="0.05"
                tools:text="tiden" />

            <TextView
                android:id="@+id/nrOfRecords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phoneNr"
                android:gravity="center"
                android:text="3 records"
                android:textColor="#7884b4"
                android:textSize="20sp"
                android:fontFamily="@font/truenoultlt"
                android:letterSpacing="0.05"
                tools:text="3 records" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

    <!--android:background="@drawable/bg_orange"-->